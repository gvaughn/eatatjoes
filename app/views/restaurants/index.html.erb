<%= link_to 'Sign in', user_session_path %>
<%= link_to 'Sign out', destroy_user_session_path, :method => :delete %>

<h1>Pick a Participating Restaurant to see their menu</h1>
<table>
<% @restaurants.each do |restaurant| %>
  <tr>
    <td><%= link_to restaurant.name, restaurant %></td>
	<% if can? :manage, restaurant %>
    	<td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
    	<td><%= link_to 'Destroy', restaurant, confirm: 'Are you sure?', method: :delete %></td>
	<% end %>
  </tr>
<% end %>
</table>

<br />

<% if can? :create, Restaurant %>
<%= link_to 'New Restaurant', new_restaurant_path %>
<% end %>
